<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>listProServlet</servlet-name>
        <servlet-class>Controller.listProServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addProServlet</servlet-name>
        <servlet-class>Controller.addProServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateProServlet</servlet-name>
        <servlet-class>Controller.updateProServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteProServlet</servlet-name>
        <servlet-class>Controller.deleteProServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>Controller.loginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>Controller.logoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addUserServlet</servlet-name>
        <servlet-class>Controller.addUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>searchAdminServlet</servlet-name>
        <servlet-class>Controller.searchAdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>productDetailServlet</servlet-name>
        <servlet-class>Controller.productDetailServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>checkCartServlet</servlet-name>
        <servlet-class>Controller.checkCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>controlCartServlet</servlet-name>
        <servlet-class>Controller.controlCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>listProServlet</servlet-name>
        <url-pattern>/listPro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addProServlet</servlet-name>
        <url-pattern>/addPro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateProServlet</servlet-name>
        <url-pattern>/updatePro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteProServlet</servlet-name>
        <url-pattern>/deletePro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addUserServlet</servlet-name>
        <url-pattern>/addUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>searchAdminServlet</servlet-name>
        <url-pattern>/searchAdmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>productDetailServlet</servlet-name>
        <url-pattern>/productDetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>checkCartServlet</servlet-name>
        <url-pattern>/checkCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>controlCartServlet</servlet-name>
        <url-pattern>/controlCart</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>shopProduct.jsp</welcome-file>
    </welcome-file-list>
</web-app>
